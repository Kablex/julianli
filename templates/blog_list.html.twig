{% extends 'base.html.twig' %}
{% block body %}
    <body class="loading header-has-img">

    <div class="mobile-nav">
        <button class="btn-mobile mobile-nav-close"><i class="rsicon rsicon-close"></i></button>

        <div class="mobile-nav-inner">
            <nav id="mobile-nav" class="nav">
                <ul class="clearfix">
                    <li><a href="{{ path('home', {'_fragment': 'about'}) }}">About</a></li>
                    <li><a href="{{ path('home', {'_fragment': 'skills'}) }}">Skills</a></li>
                    <li><a href="{{ path('home', {'_fragment': 'projects'}) }}">Projects</a> </li>
                    <li><a href="{{ path('home', {'_fragment': 'experience'}) }}">Experience</a></li>
                    <li>
                        <a href="{{ path('blog_list') }}">Blog</a>
                    </li>
                    <li><a href="{{ path('home', {'__fragment': 'contact'}) }}">Contact <span></span></a></li>
                </ul>
            </nav>
        </div>
    </div><!-- .mobile-nav -->

    <div class="wrapper">
        <header class="header">
            <div class="head-bg" style="height: 257px !important; background-image: url({{ asset('img/uploads/rs-cover.jpg') }})"></div>

            <div class="head-bar">
                <div class="head-bar-inner">
                    <div class="row">
                        <div class="col-sm-3 col-xs-6">
                            <a class="logo" href="{{ path('home') }}"><span>{{ freelancer.firstName | upper}}</span>{{ freelancer.lastName | upper}}</a>
                            <!-- <a class="head-logo" href=""><img src="img/rs-logo.png" alt="RScard"/></a> -->
                        </div>

                        <div class="col-sm-9 col-xs-6">
                            <div class="nav-wrap">
                                <nav id="nav" class="nav">
                                    <ul class="clearfix">
                                        <li><a href="{{ path('home', {'_fragment': 'about'}) }}">About</a></li>
                                        <li><a href="{{ path('home', {'_fragment': 'skills'}) }}">Skills</a></li>
                                        <li><a href="{{ path('home', {'_fragment': 'projects'}) }}">Projects</a> </li>
                                        <li><a href="{{ path('home', {'_fragment': 'experience'}) }}">Experience</a></li>
                                        <li>
                                            <a href="{{ path('blog_list') }}">Blog</a>
                                        </li>
                                        <li><a href="{{ path('home', {'_fragment': 'contact'}) }}">Contact <span></span></a></li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header><!-- .header -->

        <div class="content">
            <div class="container">

                <!-- START: PAGE CONTENT -->
                <div class="blog">
                    <div class="blog-grid">
                        <div class="grid-sizer"></div>

                        {% for post in freelancer.posts %}
                            <div class="grid-item">
                                <article class="post-box animate-up">
                                    <div class="post-media {% if post.coverImageUrl is empty %}no-media{% endif %}">
                                        {% if post.coverImageUrl is not empty %}
                                            <div class="post-image">
                                                <a href="single.html"><img src="{{ asset(post.coverImageUrl) }}" alt="{{ post.title }}"> </a>
                                            </div>
                                        {% endif %}
                                    </div>

                                    <div class="post-data">
                                        <time class="post-datetime" datetime="{{ post.createdAt | date('Y-m-d h:i:s') }}">
                                            <span class="day">{{ post.createdAt | date('d') }}</span>
                                            <span class="month">{{ post.createdAt | date('M') | upper }}</span>
                                        </time>

                                        <div class="post-tag">
                                            {% for tag in post.tags %}
                                                <a href="">#{{ tag.name }}</a>
                                            {% endfor %}
                                        </div>

                                        <h3 class="post-title">
                                            <a href="single-image.html">{{ post.title }}</a>
                                        </h3>

                                        <div class="post-info">
                                            <a href=""><i class="rsicon rsicon-user"></i>by {{ freelancer.firstName }} {{ freelancer.lastName }}</a>
                                        </div>
                                    </div>
                                </article>
                            </div>
                        {% endfor %}
                    </div><!-- .blog-grid -->

                    <div class="pagination">
                        <a class="next page-numbers" href=""><i class="rsicon rsicon-chevron_left"></i></a>
                        <span class="page-numbers current">1</span>
                        <a class="page-numbers" href="">2</a>
                        <a class="page-numbers" href="">3</a>
                        <span>...</span>
                        <a class="page-numbers" href="">22</a>
                        <a class="next page-numbers" href=""><i class="rsicon rsicon-chevron_right"></i></a>
                    </div><!-- .pagination -->
                </div><!-- .blog -->
                <!-- END: PAGE CONTENT -->

            </div><!-- .container -->
        </div><!-- .content -->

        <footer class="footer">
            <div class="footer-social">
                <ul class="social">
                    {% for socialNetwork in freelancer.socialNetworks %}
                        <li><a class="ripple-centered" href="{{ socialNetwork.link }}" target="_blank"><i class="rsicon {{ socialNetwork.icon }}"></i></a></li>
                    {% endfor %}
                </ul>
            </div>
        </footer>
    </div><!-- .wrapper -->

    <a class="btn-scroll-top" href="#"><i class="rsicon rsicon-arrow-up"></i></a>
    <div id="overlay"></div>
    <div id="preloader">
        <div class="preload-icon"><span></span><span></span></div>
        <div class="preload-text">Loading ...</div>
    </div>
    </body>
{% endblock %}