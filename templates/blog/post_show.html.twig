{% extends 'base.html.twig' %}
{% block body %}
<body class="page-single header-has-img loading">
    <div class="mobile-nav">
        <button class="btn-mobile mobile-nav-close"><i class="rsicon rsicon-close"></i></button>

        <div class="mobile-nav-inner">
            <nav id="mobile-nav" class="nav">
                <ul class="clearfix">
                    <li><a href="{{ path('home', {'_fragment': 'about'}) }}">About</a></li>
                    <li><a href="{{ path('home', {'_fragment': 'skills'}) }}">Skills</a></li>
                    <li><a href="{{ path('home', {'_fragment': 'projects'}) }}">Projects</a> </li>
                    <li><a href="{{ path('home', {'_fragment': 'experience'}) }}">Experience</a></li>
                    <li>
                        <a href="{{ path('blog_list') }}">Blog</a>
                    </li>
                    <li><a href="{{ path('home', {'__fragment': 'contact'}) }}">Contact <span></span></a></li>
                </ul>
            </nav>
        </div>
    </div><!-- .mobile-nav -->

    <div class="wrapper">
        <header class="header">
            <div class="head-bg" style="height: 257px !important; background-image: url({{ asset('img/uploads/rs-cover.jpg') }})"></div>

            <div class="head-bar">
                <div class="head-bar-inner">
                    <div class="row">
                        <div class="col-sm-3 col-xs-6">
                            <a class="logo" href="{{ path('home') }}"><span>{{ post.freelancer.firstName | upper}}</span>{{ post.freelancer.lastName | upper}}</a>
                            <!-- <a class="head-logo" href=""><img src="img/rs-logo.png" alt="RScard"/></a> -->
                        </div>

                        <div class="col-sm-9 col-xs-6">
                            <div class="nav-wrap">
                                <nav id="nav" class="nav">
                                    <ul class="clearfix">
                                        <li><a href="{{ path('home', {'_fragment': 'about'}) }}">About</a></li>
                                        <li><a href="{{ path('home', {'_fragment': 'skills'}) }}">Skills</a></li>
                                        <li><a href="{{ path('home', {'_fragment': 'projects'}) }}">Projects</a> </li>
                                        <li><a href="{{ path('home', {'_fragment': 'experience'}) }}">Experience</a></li>
                                        <li>
                                            <a href="{{ path('blog_list') }}">Blog</a>
                                        </li>
                                        <li><a href="{{ path('home', {'_fragment': 'contact'}) }}">Contact <span></span></a></li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header><!-- .header -->

        <div class="content">
            <div class="container">
                <!-- START: PAGE CONTENT -->
                <div class="row animate-up">
                    <div class="col-sm-8">
                        <main class="post-single">
                            <article class="post-content section-box">
                                {% if post.coverImageUrl is not empty %}
                                    <div class="post-media">
                                        <img src="{{ asset(post.coverImageUrl) }}" alt="{{ post.title }}"/>
                                    </div><!-- .post-media -->
                                {% endif %}
                                <div class="post-inner">
                                    <header class="post-header">
                                        <div class="post-data">
                                            <div class="post-tag">
                                                {% for tag in post.tags %}
                                                <a href="">#{{ tag.name }}</a>
                                                {% endfor %}
                                            </div>

                                            <div class="post-title-wrap">
                                                <h1 class="post-title">{{ post.title }}</h1>
                                                <time class="post-datetime" datetime="{{ post.createdAt | date('Y-m-d H:i:s') }}">
                                                    <span class="day">{{ post.createdAt | date('d') }}</span>
                                                    <span class="month">{{ post.createdAt | date('M') | upper }}</span>
                                                </time>
                                            </div>

                                            <div class="post-info">
                                                <a href=""><i class="rsicon rsicon-user"></i>by {{ post.freelancer.firstName }} {{ post.freelancer.lastName }}</a>
                                            </div>
                                        </div>
                                    </header>

                                    <div class="post-editor clearfix">
                                       {{ post.content | raw }}
                                    </div>
                                </div><!-- .post-inner -->
                            </article><!-- .post-content -->
                            <div>
                                <span class="btn-outer btn-primary-outer ripple">
                                    <a href="{{ path('blog_list') }}" class="btn btn-lg btn-primary" style="color:white">Back to posts list</a>
                                </span>
                            </div>
                        </main>
                        <!-- .post-single -->
                    </div>

                    <div class="col-sm-4">
                        <div class="sidebar sidebar-default">
                            <div class="widget-area">
                                <aside class="widget widget-profile">
                                    <div class="profile-photo">
                                        <img src="{{ asset('img/uploads/rs-photo-v2.jpg') }}" alt="{{ post.freelancer.firstName }} {{ post.freelancer.lastName }}"/>
                                    </div>
                                    <div class="profile-info">
                                        <h2 class="profile-title">{{ post.freelancer.firstName }} {{ post.freelancer.lastName }}</h2>
                                        <h3 class="profile-position">{{ post.freelancer.title }}</h3>
                                    </div>
                                </aside><!-- .widget-profile -->
                            </div><!-- .widget-area -->
                        </div><!-- .sidebar -->
                    </div><!-- .col-sm-4 -->
                </div><!-- .row -->
                <!-- END: PAGE CONTENT -->

            </div><!-- .container -->
        </div><!-- .content -->

        <footer class="footer">
            <div class="footer-social">
                <ul class="social">
                    {% for socialNetwork in post.freelancer.socialNetworks %}
                        <li><a class="ripple-centered" href="{{ socialNetwork.link }}" target="_blank"><i class="rsicon {{ socialNetwork.icon }}"></i></a></li>
                    {% endfor %}
                </ul>
            </div>
        </footer><!-- .footer -->
    </div><!-- .wrapper -->

    <a class="btn-scroll-top" href="#"><i class="rsicon rsicon-arrow-up"></i></a>
    <div id="overlay"></div>
    <div id="preloader">
        <div class="preload-icon"><span></span><span></span></div>
        <div class="preload-text">Loading ...</div>
    </div>
</body>
{% endblock %}